# Set default behavior to automatically normalize line endings
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Shaders
*.wgsl text eol=lf
*.glsl text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.obj binary
*.gltf text eol=lf
*.glb binary
